<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="@string/settings_general">
        <CheckBoxPreference
            app:key="usePlexServer"
            app:title="@string/usePlexServer"
            app:defaultValue="true"
            />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/plex_server">

        <EditTextPreference
            app:key="plex_server_ip"
            app:title="@string/plex_server_ip"
            app:defaultValue="192.168.3.21"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="plex_server_port"
            app:title="@string/plex_server_port"
            app:defaultValue="32400"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="plex_server_token"
            app:title="@string/plex_server_token"
            app:defaultValue="LAtVbxshNWzuGUwtm8bJ"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="plex_server_libid"
            app:title="@string/plex_server_libid"
            app:defaultValue="2"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>


    <PreferenceCategory app:title="@string/design">
        <CheckBoxPreference
            app:key="useBackgroundColor"
            app:title="@string/useBackgroundColor"
            app:defaultValue="true"
            />

        <ListPreference
            app:key="BackgroundColor"
            app:title="@string/BackgroundColor"
            app:entries="@array/background_color_names_array"
            app:entryValues="@array/background_color_values_array"
            app:defaultValue=""
            app:useSimpleSummaryProvider="true"/>

        <Preference
            app:key="BackgroundImage"
            app:title="@string/BackgroundImage"
            app:defaultValue=""
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sentry">
        <CheckBoxPreference
            app:key="useSentry"
            app:title="@string/use_sentry"
            app:defaultValue="true"
            />
    </PreferenceCategory>

</PreferenceScreen>